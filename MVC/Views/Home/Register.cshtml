@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<div class="container d-flex justify-content-center align-items-center min-vh-100"style="background-color: #9A616D ; border: 2px solid black; border-radius: 40px;">

<div class="container mt-1" style="border-radius: 20px;">
        <div class="card shadow-lg p-4" style="border-radius: 20px;">
            <h3 class="text-center mb-4">Registration Form</h3>
            <form enctype="multipart/form-data">
                <div class="row g-3">
                    <!-- Username Field -->
                    <div class="col-md-6">
                        <label class="form-label">Username</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter username">
                    </div>
                    
                    <!-- Email Field -->
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter email">
                    </div>
                </div>
                
                <div class="row g-3 mt-2">
                    <!-- Password Field -->
                    <div class="col-md-6">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" id="pwd" placeholder="Enter password">
                    </div>
                    
                    <!-- Confirm Password Field -->
                    <div class="col-md-6">
                        <label class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="conpwd" placeholder="Confirm password">
                    </div>
                </div>
                
                <div class="row g-3 mt-2">
                    <!-- Address Field -->
                    <div class="col-md-6">
                        <label class="form-label">Address</label>
                        <input type="text" class="form-control" id="address" placeholder="Enter address">
                    </div>
                    
                    <!-- Mobile Field -->
                    <div class="col-md-6">
                        <label class="form-label">Mobile</label>
                        <input type="text" class="form-control" id="mobile" placeholder="Enter mobile number">
                    </div>
                </div>
                
                <!-- Gender Field -->
                <div class="mt-3">
                    <label class="form-label">Gender</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gender" value="Male"> Male
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gender" value="Female"> Female
                    </div>
                </div>
                
                <div class="row g-3 mt-2">
                    <!-- Date of Birth Field -->
                    <div class="col-md-4">
                        <label class="form-label">Date of Birth</label>
                        <input type="date" class="form-control" id="dob">
                    </div>
                    
                    <!-- Country Field -->
                    <div class="col-md-4">
                        <label class="form-label">Country</label>
                        <select id="country" class="form-select">
                            <option value="">Select Country</option>
                            <option value="India">India</option>
                            <option value="USA">USA</option>
                            <option value="UK">UK</option>
                        </select>
                    </div>
                    
                    <!-- State Field -->
                    <div class="col-md-4">
                        <label class="form-label">State</label>
                        <select id="state" class="form-select">
                            <option value="">Select State</option>
                        </select>
                    </div>
                </div>
                
                <!-- District Field -->
                <div class="mt-3">
                    <label class="form-label">District</label>
                    <select id="district" class="form-select">
                        <option value="">Select District</option>
                    </select>
                </div>
                
                <!-- Profile Picture Upload Field -->
                <div class="mt-3">
                    <label class="form-label">Profile Picture</label>
                    <input type="file" class="form-control" id="Image">
                </div>
                
                <!-- Submit Button -->
                <div class="text-center mt-4">
                    <button type="button" id="register" class="btn btn-primary">Submit</button>
                </div>
                
                <span id="responseMessage" class="text-danger d-block text-center mt-3"></span>
            </form>
        </div>
    </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    const stateData = {
        "India": ["Maharashtra", "Gujarat", "Rajasthan"],
        "USA": ["California", "Texas", "New York"],
        "UK": ["London", "Manchester", "Liverpool"]
    };

    const districtData = {
        "Maharashtra": ["Mumbai", "Pune", "Nagpur"],
        "Gujarat": ["Ahmedabad", "Surat", "Vadodara"],
        "Rajasthan": ["Jaipur", "Udaipur", "Jodhpur"],
        "California": ["Los Angeles", "San Francisco", "San Diego"],
        "Texas": ["Houston", "Dallas", "Austin"],
        "New York": ["Buffalo", "Rochester", "Albany"],
        "London": ["Camden", "Greenwich", "Hackney"],
        "Manchester": ["Bolton", "Bury", "Oldham"],
        "Liverpool": ["Knowsley", "Sefton", "Wirral"]
    };

    document.getElementById("country").addEventListener("change", function () {
        let country = this.value;
        let stateDropdown = document.getElementById("state");
        stateDropdown.innerHTML = '<option value="">Select State</option>';

        if (stateData[country]) {
            stateData[country].forEach(state => {
                let option = document.createElement("option");
                option.value = state;
                option.textContent = state;
                stateDropdown.appendChild(option);
            });
        }
    });

    document.getElementById("state").addEventListener("change", function () {
        let state = this.value;
        let districtDropdown = document.getElementById("district");
        districtDropdown.innerHTML = '<option value="">Select District</option>';

        if (districtData[state]) {
            districtData[state].forEach(district => {
                let option = document.createElement("option");
                option.value = district;
                option.textContent = district;
                districtDropdown.appendChild(option);
            });
        }
    });
</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    document.getElementById("register").addEventListener("click", function (event) {
        event.preventDefault();
    });

    $(document).ready(function () {
        $('#register').click(function () {
            // Create a FormData object and append form values
            var formData = new FormData();
            formData.append("c_username", $('#name').val());
            formData.append("c_email", $('#email').val());
            formData.append("c_password", $('#pwd').val());
            formData.append("c_confirmpassword", $('#conpwd').val());
            formData.append("c_address", $('#address').val());
            formData.append("c_mobile", $('#mobile').val());
            formData.append("c_gender", $('input[name="gender"]:checked').val());
            formData.append("c_dob", $('#dob').val());
            formData.append("c_country", $('#country').val());
            formData.append("c_state", $('#state').val());
            formData.append("c_district", $('#district').val());

            // Append the image file
            var fileInput = $('#Image')[0].files[0];
            if (fileInput) {
                formData.append("ProfilePic", fileInput);
            }
            console.log(formData);
            $.ajax({
                url: 'http://localhost:5277/api/RegisterLogin/Register',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    console.log(response);
                    if (response.success) {
                        $('#responseMessage').text('User Register successfully!');
                        setTimeout(function () {
                            window.location.href = '/Home/Login';
                        }, 2000); // Redirect after 2 seconds
                    }
                    else {
                        $('#responseMessage').addClass("alert alert-danger");
                        $('#responseMessage').text('Error: ' + response.message);
                    }
                },

                error: function (xhr, status, error) {
                    var dispalyerror = "";
                    dispalyerror += (xhr.responseJSON.errors.c_username ?

                        xhr.responseJSON.errors.c_username + ", " : "");

                    dispalyerror += (xhr.responseJSON.errors.c_email ?

                        xhr.responseJSON.errors.c_email + ", " : "");

                    dispalyerror += (xhr.responseJSON.errors.c_password ?

                        xhr.responseJSON.errors.c_password + ", " : "");

                    dispalyerror += (xhr.responseJSON.errors.c_confirmpassword ?
                        xhr.responseJSON.errors.c_confirmpassword + ", " : "");

                    $('#responseMessage').addClass("alert alert-danger");
                    $('#responseMessage').text('Error: ' + dispalyerror.slice(0, -2));
                }
            });
        });
    });
</script>
